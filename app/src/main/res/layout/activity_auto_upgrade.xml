<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.myjava.AutoUpgrade">

    <Button
        android:id="@+id/button_check"
        android:layout_width="match_parent"
        android:text="检测"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_upgrade"
        android:layout_width="match_parent"
        android:text="自动升级"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/button_ws"
        android:layout_width="match_parent"
        android:text="Websocket"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_write"
            android:text="写_FileOutputStream"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_read"
            android:text="读_FileInputStream"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_write_share"
            android:text="写_ShareReference"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/button_read_share"
            android:text="读_ShareReference"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <EditText
       android:id="@+id/edittext_write"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edittext_read"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



</LinearLayout>
